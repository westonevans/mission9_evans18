<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mission9_evans18</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Set the initial opacity of the page content to 0 */
        .row {
            opacity: 0;
        }

        /* Add a transition effect to the opacity */
        .row {
            transition: opacity 0.5s ease-in-out;
        }

            /* Set the opacity of the page content to 1 when it becomes visible */
            .row.visible {
                opacity: 1;
            }

        /* Add a transition effect to the navbar */
        .navbar-brand {
            transition: transform 0.3s ease-in-out;
        }

            /* Add a hover effect to the navbar */
            .navbar-brand:hover {
                transform: scale(1.2);
            }
    </style>
    <script>
        // Wait for the page to load
        document.addEventListener("DOMContentLoaded", function() {
        // Add the "visible" class to the row element
        document.querySelector(".row").classList.add("visible");
        });
    </script>

</head>
<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">BOOK STORE</span>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            <vc:types></vc:types>
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
