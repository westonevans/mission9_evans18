@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-block btn-outline-secondary">Home</a>
    <br />

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@t" asp-route-pageNum="1"
           class="btn@(ViewBag.SelectedType == t ? "btn btn-block btn-primary" :  "btn btn-block btn-outline-secondary")">@t</a><br />
    }
</div>